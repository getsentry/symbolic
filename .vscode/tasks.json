{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "tasks": [
    {
      "taskName": "cargo build",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "command": "cargo",
      "args": ["build"],
      "group": "build",
      "problemMatcher": "$rustc"
    },
    {
      "taskName": "cargo check all",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "command": "cargo",
      "args": ["check", "--all", "--tests"],
      "group": "build",
      "problemMatcher": "$rustc"
    },
    {
      "taskName": "cargo run",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "command": "cargo",
      "args": ["run"],
      "problemMatcher": "$rustc"
    },
    {
      "taskName": "cargo test",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "command": "cargo",
      "args": ["test"],
      "group": "test",
      "problemMatcher": "$rustc"
    },
    {
      "taskName": "cargo clean",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "command": "cargo",
      "args": ["clean"]
    }
  ]
}
